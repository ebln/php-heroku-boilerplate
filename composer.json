{
    "name": "brnc/heroku-boilerplate",
    "type": "project",
    "license": "proprietary",
    "description": "Heroku & Docker boilerplate for PHP development",
    "authors": [
        {
            "name": "me",
            "email": "me@here.invalid"
        }
    ],
    "require": {
        "php": "~7.2.0"
    },
    "require-dev": {
        "heroku/heroku-buildpack-php": "*",
        "roave/security-advisories": "dev-master"
    },

    "autoload": {
        "psr-4": {
            "brnc\\Boilerplate\\": "src/"
        }
    },
    "archive": {
        "exclude": ["vendor/*", "tests/", ".*", "phpunit.xml.dist", "coverage/"]
    },
    "scripts": {
        "compile": [
            "echo 'Add on-heroku-build steps here! e.g. doctrine:migrations:migrate â€“ See https://devcenter.heroku.com/articles/php-support#custom-compile-step'"
        ],
        "phpunit": "phpunit --coverage-text",
        "test": [
            "@phpunit"
        ]
    }
}
